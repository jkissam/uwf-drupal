stylesheets[screen, projection][] = css/screen.css
stylesheets[screen, projection][] = css/drupal.css
stylesheets[print][] = css/print.css
scripts[] = js/modernizr.js
scripts[] = js/fastclick.min.js
scripts[] = js/hammer.min.js
scripts[] = js/jquery.validate.js
scripts[] = js/uwfutil.js
scripts[] = js/drupal.js

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
